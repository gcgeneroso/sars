<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button"
        android:onClick="clickRefreshButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/upcTextView"
        android:editable="true"
        android:focusable="true"
        android:enabled="true"
        android:background="@android:color/background_light"
        android:focusableInTouchMode="true"
        android:height="25dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button"
        android:layout_alignBaseline="@id/button"
        />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/albumImage1"
        android:layout_toEndOf="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_toEndOf="@+id/upcTextView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/artistName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/releaseName"
        android:layout_below="@+id/albumImage1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button"
        android:height="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/artistName"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/releaseName"
        android:layout_alignEnd="@+id/listView"/>

</RelativeLayout>
